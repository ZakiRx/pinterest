{% extends "Admin/dashboard.html.twig" %}

{% block body %}
    <a href="{{ path('category_new') }}" class="btn btn-info mb-3">New Category</a>
    <table class="table table-bordered table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}